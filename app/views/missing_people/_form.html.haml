= form_for @missing_person do |f|
  - if @missing_person.errors.any?
    #error_explanation
      %h2= "#{pluralize(@missing_person.errors.count, "error")} prohibited this missing_person from being saved:"
      %ul
        - @missing_person.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :contact_name
    = f.text_field :contact_name
  .field
    = f.label :contact_number
    = f.text_field :contact_number
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :found
    = f.check_box :found
  .actions
    = f.submit 'Save'
