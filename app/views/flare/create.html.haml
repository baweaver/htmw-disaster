  %body
    .container
      / Main hero unit for a primary marketing message or call to action
      .hero-unit
        %img{:src => "/assets/FoneFlareBanner.png"}/
      %form.form-horizontal{:action => "submit_new_flare.htm", :method => "post"}
        %fieldset
          %legend Create a flare / post your need!
          .control-group
            %label.control-label{:for => "input01"} Your cell phone number
            .controls
              %input#srcphone.input-xlarge{:type => "text"}/
          .control-group
            %label.control-label{:for => "input02"} Your zip code
            .controls
              %input#zip.input-xlarge{:type => "text"}/
          .control-group
            %label.control-label{:for => "category"} Type of assistance needed
            .controls
              %select#category
                - @categories.each do |row|
                  %option{:value => "#{row[0]}"} #{row[1]}
          .control-group
            %label.control-label{:for => "textarea"} Location
            .controls
              %textarea#location.input-xlarge{:rows => "3"}
          .control-group
            %label.control-label{:for => "textarea"} Description
            .controls
              %textarea#description.input-xlarge{:rows => "3"}
          .form-actions
            %button.btn.btn-primary{:type => "submit"} Create this flare
            %button.btn Cancel
